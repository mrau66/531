<script>
document.addEventListener('DOMContentLoaded', function() {
  // Load current cycle/week position
  loadCurrentPosition();
  
  // Update cycle info when selections change
  const cycleSelect = document.getElementById('cycle-select');
  const weekSelect = document.getElementById('week-select');
  
  cycleSelect?.addEventListener('change', updateCycleInfo);
  weekSelect?.addEventListener('change', updateCycleInfo);
  
  // Save button
  document.getElementById('save-cycle-week-btn')?.addEventListener('click', saveCycleWeek);
  
  // Quick action buttons
  document.getElementById('next-week-btn')?.addEventListener('click', advanceToNextWeek);
  document.getElementById('next-cycle-btn')?.addEventListener('click', startNextCycle);
  document.getElementById('deload-week-btn')?.addEventListener('click', scheduleDeload);
  document.getElementById('reset-program-btn')?.addEventListener('click', resetProgram);
  
  // Initial update
  updateCycleInfo();
  updateCycleCards();
});

function loadCurrentPosition() {
  // This would typically load from the persistence manager
  if (window.persistenceManager) {
    // Load saved position
    console.log('Loading current cycle/week position...');
  }
}

function updateCycleInfo() {
  const cycleSelect = document.getElementById('cycle-select');
  const weekSelect = document.getElementById('week-select');
  const cycleInfo = document.getElementById('current-cycle-info');
  
  if (!cycleSelect || !weekSelect || !cycleInfo) return;
  
  const cycle = parseInt(cycleSelect.value);
  const week = parseInt(weekSelect.value);
  
  // Get cycle configuration (this should match your existing cycle config)
  const cycleConfigs = {
    1: { type: "Volume", description: "5 sets x 12 reps @ 45%" },
    2: { type: "Intensity", description: "5 sets x 6 reps @ 75%" },
    3: { type: "Volume", description: "5 sets x 11 reps @ 50%" },
    4: { type: "Intensity", description: "5 sets x 5 reps @ 80%" },
    5: { type: "Volume", description: "5 sets x 10 reps @ 55%" },
    6: { type: "Intensity", description: "5 sets x 4 reps @ 85%" },
    7: { type: "Volume", description: "5 sets x 9 reps @ 60%" },
    8: { type: "Intensity", description: "5 sets x 3 reps @ 90%" },
    9: { type: "Volume", description: "5 sets x 8 reps @ 65%" },
    10: { type: "Intensity", description: "5 sets x 2 reps @ 95%" },
    11: { type: "Volume", description: "5 sets x 7 reps @ 70%" },
    12: { type: "Test Week", description: "Test maxes or TM test" }
  };
  
  const config = cycleConfigs[cycle];
  if (config) {
    cycleInfo.innerHTML = `
      <h3>Cycle ${cycle} (Week ${week}) - ${config.type} Phase</h3>
      <p class="cycle-type">${config.description}</p>
    `;
  }
  
  updateCycleCards();
}

function updateCycleCards() {
  const currentCycle = parseInt(document.getElementById('cycle-select')?.value || 1);
  
  // Update active state
  document.querySelectorAll('.cycle-card').forEach(card => {
    const cardCycle = parseInt(card.dataset.cycle);
    card.classList.toggle('active', cardCycle === currentCycle);
  });
}

function selectCycle(cycleNumber) {
  const cycleSelect = document.getElementById('cycle-select');
  if (cycleSelect) {
    cycleSelect.value = cycleNumber;
    updateCycleInfo();
  }
}

function saveCycleWeek() {
  const cycle = document.getElementById('cycle-select')?.value;
  const week = document.getElementById('week-select')?.value;
  
  if (window.persistenceManager && window.persistenceManager.saveCycleProgress) {
    window.persistenceManager.saveCycleProgress();
    
    // Show success feedback
    const button = document.getElementById('save-cycle-week-btn');
    const originalText = button.querySelector('.save-text').textContent;
    const icon = button.querySelector('.save-icon');
    
    button.classList.add('success');
    icon.textContent = '‚úÖ';
    button.querySelector('.save-text').textContent = 'Saved!';
    
    setTimeout(() => {
      button.classList.remove('success');
      icon.textContent = 'üíæ';
      button.querySelector('.save-text').textContent = originalText;
    }, 2000);
  }
  
  console.log(`Saved position: Cycle ${cycle}, Week ${week}`);
}

function advanceToNextWeek() {
  const weekSelect = document.getElementById('week-select');
  const cycleSelect = document.getElementById('cycle-select');
  
  if (!weekSelect || !cycleSelect) return;
  
  const currentWeek = parseInt(weekSelect.value);
  const currentCycle = parseInt(cycleSelect.value);
  
  if (currentWeek < 3) {
    weekSelect.value = currentWeek + 1;
  } else {
    // Move to next cycle, week 1
    if (currentCycle < 12) {
      cycleSelect.value = currentCycle + 1;
      weekSelect.value = 1;
    } else {
      alert('You\'re already at the end of the program! Consider starting a new cycle or testing your maxes.');
      return;
    }
  }
  
  updateCycleInfo();
  saveCycleWeek();
}

function startNextCycle() {
  const cycleSelect = document.getElementById('cycle-select');
  const weekSelect = document.getElementById('week-select');
  
  if (!cycleSelect || !weekSelect) return;
  
  const currentCycle = parseInt(cycleSelect.value);
  
  if (currentCycle < 12) {
    cycleSelect.value = currentCycle + 1;
    weekSelect.value = 1;
    updateCycleInfo();
    saveCycleWeek();
    
    // Suggest TM increase
    if (confirm('Starting next cycle! Would you like to increase your training maxes as well?')) {
      window.location.href = '/training-maxes';
    }
  } else {
    alert('You\'re already at the final cycle! Consider resetting to Cycle 1 with new training maxes.');
  }
}

function scheduleDeload() {
  if (confirm('Deload week recommended! This will set you to Cycle 7, Week 1 (traditional deload position). Continue?')) {
    document.getElementById('cycle-select').value = 7;
    document.getElementById('week-select').value = 1;
    updateCycleInfo();
    saveCycleWeek();
    
    // Suggest TM reduction
    if (confirm('Would you also like to reduce your training maxes by 10% for the deload?')) {
      window.location.href = '/training-maxes';
    }
  }
}

function resetProgram() {
  if (confirm('This will reset you back to Cycle 1, Week 1. Are you sure?')) {
    document.getElementById('cycle-select').value = 1;
    document.getElementById('week-select').value = 1;
    updateCycleInfo();
    saveCycleWeek();
  }
}
</script>