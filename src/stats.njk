<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
<script type="module">
import { getSupabase } from '/js/supabase.js';

// Chart configuration with minimal JS
const chartConfig = {
  responsive: true,
  maintainAspectRatio: false,
  plugins: {
    legend: {
      position: 'bottom',
      labels: {
        padding: 15,
        font: { size: 12 }
      }
    },
    tooltip: {
      backgroundColor: 'rgba(0, 0, 0, 0.8)',
      padding: 12,
      cornerRadius: 8
    }
  }
};

// Initialize charts
let tmProgressChart, volumeChart, completionChart, distributionChart, weeklyStreakChart;

async function loadStatsData() {
  const supabase = await getSupabase();
  const { data: { user } } = await supabase.auth.getUser();
  
  if (!user) {
    console.error('User not logged in');
    return;
  }

  // Fetch all necessary data
  const [tmHistory, sessions, cycleProgress] = await Promise.all([
    supabase.from('training_maxes')
      .select('*')
      .eq('user_id', user.id)
      .order('effective_date', { ascending: true }),
    supabase.from('workout_sessions')
      .select('*')
      .eq('user_id', user.id)
      .order('session_date', { ascending: true }),
    supabase.from('cycle_progress')
      .select('*')
      .eq('user_id', user.id)
      .order('created_at', { ascending: false })
      .limit(1)
  ]);

  // Update summary stats
  updateSummaryStats(sessions.data, cycleProgress.data);
  
  // Update charts
  updateTMProgressChart(tmHistory.data);
  updateVolumeChart(sessions.data);
  updateWeeklyStreakChart(sessions.data);
  updateCompletionChart(sessions.data);
  updateDistributionChart(sessions.data);
}

function updateSummaryStats(sessions, cycleProgress) {
  // Total sessions
  document.getElementById('total-sessions').textContent = sessions?.length || 0;
  
  // Current cycle
  const currentCycle = cycleProgress?.[0]?.cycle_number || 1;
  document.getElementById('current-cycle').textContent = `Cycle ${currentCycle}`;
  
  // Weeks completed
  const weeksCompleted = Math.floor((sessions?.length || 0) / 4);
  document.getElementById('weeks-completed').textContent = weeksCompleted;
  
  // Current streak (simplified calculation)
  const streak = calculateStreak(sessions);
  document.getElementById('current-streak').textContent = `${streak} days`;
}

function calculateStreak(sessions) {
  if (!sessions || sessions.length === 0) return 0;
  
  const today = new Date();
  today.setHours(0, 0, 0, 0);
  
  let streak = 0;
  let currentDate = new Date(today);
  
  // Simple streak calculation - counts consecutive workout days
  for (let i = sessions.length - 1; i >= 0; i--) {
    const sessionDate = new Date(sessions[i].session_date);
    sessionDate.setHours(0, 0, 0, 0);
    
    const dayDiff = Math.floor((currentDate - sessionDate) / (1000 * 60 * 60 * 24));
    
    if (dayDiff <= 1) {
      streak++;
      currentDate = sessionDate;
    } else {
      break;
    }
  }
  
  return streak;
}

function updateTMProgressChart(data) {
  if (!data || data.length === 0) return;
  
  const ctx = document.getElementById('tm-progress-chart').getContext('2d');
  
  if (tmProgressChart) tmProgressChart.destroy();
  
  tmProgressChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: data.map(d => new Date(d.effective_date).toLocaleDateString()),
      datasets: [
        {
          label: 'Squat',
          data: data.map(d => d.squat_max),
          borderColor: '#667eea',
          backgroundColor: 'rgba(102, 126, 234, 0.1)',
          tension: 0.3
        },
        {
          label: 'Bench',
          data: data.map(d => d.bench_max),
          borderColor: '#764ba2',
          backgroundColor: 'rgba(118, 75, 162, 0.1)',
          tension: 0.3
        },
        {
          label: 'Deadlift',
          data: data.map(d => d.deadlift_max),
          borderColor: '#f59e0b',
          backgroundColor: 'rgba(245, 158, 11, 0.1)',
          tension: 0.3
        },
        {
          label: 'OHP',
          data: data.map(d => d.ohp_max),
          borderColor: '#10b981',
          backgroundColor: 'rgba(16, 185, 129, 0.1)',
          tension: 0.3
        }
      ]
    },
    options: {
      ...chartConfig,
      scales: {
        y: {
          beginAtZero: false,
          title: { display: true, text: 'Weight (kg)' }
        }
      }
    }
  });
}

function updateVolumeChart(sessions) {
  if (!sessions || sessions.length === 0) return;
  
  const ctx = document.getElementById('volume-chart').getContext('2d');
  
  // Group sessions by week
  const weeklyVolume = {};
  sessions.forEach(session => {
    const weekStart = getWeekStart(new Date(session.session_date));
    const weekKey = weekStart.toISOString().split('T')[0];
    
    if (!weeklyVolume[weekKey]) {
      weeklyVolume[weekKey] = 0;
    }
    weeklyVolume[weekKey]++;
  });
  
  const sortedWeeks = Object.keys(weeklyVolume).sort();
  
  if (volumeChart) volumeChart.destroy();
  
  volumeChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: sortedWeeks.map(w => new Date(w).toLocaleDateString()),
      datasets: [{
        label: 'Sessions per Week',
        data: sortedWeeks.map(w => weeklyVolume[w]),
        backgroundColor: 'rgba(102, 126, 234, 0.8)',
        borderColor: '#667eea',
        borderWidth: 2
      }]
    },
    options: {
      ...chartConfig,
      scales: {
        y: {
          beginAtZero: true,
          ticks: { stepSize: 1 }
        }
      }
    }
  });
}

function updateCompletionChart(sessions) {
  if (!sessions || sessions.length === 0) return;
  
  const ctx = document.getElementById('completion-chart').getContext('2d');
  
  const completed = sessions.filter(s => s.session_complete).length;
  const incomplete = sessions.length - completed;
  
  if (completionChart) completionChart.destroy();
  
  completionChart = new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: ['Completed', 'Incomplete'],
      datasets: [{
        data: [completed, incomplete],
        backgroundColor: ['#10b981', '#ef4444'],
        borderWidth: 0
      }]
    },
    options: {
      ...chartConfig,
      plugins: {
        ...chartConfig.plugins,
        legend: {
          position: 'bottom'
        }
      }
    }
  });
}

function updateDistributionChart(sessions) {
  if (!sessions || sessions.length === 0) return;
  
  const ctx = document.getElementById('distribution-chart').getContext('2d');
  
  const liftCounts = {
    squat: sessions.filter(s => s.lift_type === 'squat').length,
    bench: sessions.filter(s => s.lift_type === 'bench').length,
    deadlift: sessions.filter(s => s.lift_type === 'deadlift').length,
    ohp: sessions.filter(s => s.lift_type === 'ohp').length
  };
  
  if (distributionChart) distributionChart.destroy();
  
  distributionChart = new Chart(ctx, {
    type: 'polarArea',
    data: {
      labels: ['Squat', 'Bench', 'Deadlift', 'OHP'],
      datasets: [{
        data: Object.values(liftCounts),
        backgroundColor: [
          'rgba(102, 126, 234, 0.7)',
          'rgba(118, 75, 162, 0.7)',
          'rgba(245, 158, 11, 0.7)',
          'rgba(16, 185, 129, 0.7)'
        ],
        borderWidth: 2,
        borderColor: '#fff'
      }]
    },
    options: {
      ...chartConfig,
      scales: {
        r: {
          beginAtZero: true,
          ticks: { stepSize: 1 }
        }
      }
    }
  });
}

function getWeekStart(date) {
  const d = new Date(date);
  const day = d.getDay();
  const diff = d.getDate() - day + (day === 0 ? -6 : 1);
  return new Date(d.setDate(diff));
}

function getWeekYear(date) {
  const d = new Date(Date.UTC(date.getFullYear(), date.getMonth(), date.getDate()));
  const dayNum = d.getUTCDay() || 7;
  d.setUTCDate(d.getUTCDate() + 4 - dayNum);
  const yearStart = new Date(Date.UTC(d.getUTCFullYear(), 0, 1));
  const weekNum = Math.ceil((((d - yearStart) / 86400000) + 1) / 7);
  return { year: d.getUTCFullYear(), week: weekNum };
}

function updateWeeklyStreakChart(sessions) {
  if (!sessions || sessions.length === 0) return;
  
  const ctx = document.getElementById('weekly-streak-chart').getContext('2d');

    
  // Get last 3 months of weeks
  const today = new Date();
  const threeMonthsAgo = new Date(today);
  threeMonthsAgo.setMonth(threeMonthsAgo.getMonth() - 3);
  
  // Build week labels and analyze completion
  const weekLabels = [];
  const weekCompletions = [];
  const weekColors = [];
  
  // Generate all weeks in the last 3 months
  let currentDate = new Date(threeMonthsAgo);
  currentDate.setDate(currentDate.getDate() - currentDate.getDay() + 1); // Start from Monday
  
  while (currentDate <= today) {
    const { year, week } = getWeekYear(currentDate);
    const weekKey = `${year}-W${week}`;
    
    // Count unique lifts for this week
    const liftsInWeek = new Set();
    sessions.forEach(session => {
      const sessionWeek = getWeekYear(new Date(session.session_date));
      if (sessionWeek.year === year && sessionWeek.week === week) {
        liftsInWeek.add(session.lift_type);
      }
    });
    
    const liftsCompleted = liftsInWeek.size;
    weekLabels.push(`Week ${week}`);
    weekCompletions.push(liftsCompleted);
    
    // Color based on completion
    if (liftsCompleted === 4) {
      weekColors.push('rgba(16, 185, 129, 0.8)'); // Green for complete
    } else if (liftsCompleted >= 2) {
      weekColors.push('rgba(245, 158, 11, 0.8)'); // Orange for partial
    } else if (liftsCompleted === 1) {
      weekColors.push('rgba(239, 68, 68, 0.8)'); // Light red for minimal
    } else {
      weekColors.push('rgba(229, 231, 235, 0.8)'); // Gray for no workouts
    }
    
    // Move to next week
    currentDate.setDate(currentDate.getDate() + 7);
  }
  
  if (weeklyStreakChart) weeklyStreakChart.destroy();

  const isMobile = window.innerWidth < 768;

  
  weeklyStreakChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: weekLabels,
      datasets: [{
        label: 'Lifts Completed',
        data: weekCompletions,
        backgroundColor: weekColors,
        borderColor: weekColors.map(c => c.replace('0.8', '1')),
        borderWidth: 2,
        maxBarThickness: isMobile ? 30 : 40
      }]
    },
    options: {
      ...chartConfig,
      scales: {
        y: {
          beginAtZero: true,
          max: 4,
          ticks: { 
            stepSize: 1,
            callback: function(value) {
              return value + ' lifts';
            },
            font: {
              size: isMobile ? 10 : 12
            }

          },
          title: { 
            display: true, 
            text: 'Unique Lifts per Week',
            font: {
              size: isMobile ? 11 : 14
            }
          }
        },
        x: {
           ticks: {
            maxRotation: isMobile ? 90 : 45,  // ‚úÖ Vertical labels on mobile
            minRotation: isMobile ? 90 : 0,
            font: {
              size: isMobile ? 9 : 11  // ‚úÖ Smaller font on mobile
            },
            autoSkip: true,  // ‚úÖ Skip some labels if needed
            maxTicksLimit: isMobile ? 8 : 15  // ‚úÖ Fewer ticks on mobile
          },
          title: { 
            display: !isMobile,  
            text: 'Weeks (Last 3 Months)' 
          }
        }
      },
      plugins: {
        ...chartConfig.plugins,
        tooltip: {
          backgroundColor: 'rgba(0, 0, 0, 0.8)',
          padding: 12,
          cornerRadius: 8,
          callbacks: {
            label: function(context) {
              const value = context.parsed.y;
              const lifts = ['squat', 'bench', 'deadlift', 'ohp'];
              const weekData = sessions.filter(s => {
                const sessionWeek = getWeekYear(new Date(s.session_date));
                const labelWeek = parseInt(context.label.replace('Week ', ''));
                return sessionWeek.week === labelWeek;
              });
              
              const completedLifts = [...new Set(weekData.map(s => s.lift_type))];
              
              if (value === 4) {
                return '‚úÖ Complete week - All 4 lifts';
              } else if (value > 0) {
                return `${value} of 4 lifts (${completedLifts.join(', ')})`;
              } else {
                return 'No workouts';
              }
            }
          }
        },
        legend: {
          display: false
        }
      }
    }
  });
  
}


